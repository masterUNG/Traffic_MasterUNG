<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="appewtc.masterung.traffic.ShowDetailActivity"
    android:background="@drawable/bg100">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtTitleDetail"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/h1"
            android:textStyle="bold"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="@dimen/image"
            android:layout_height="@dimen/image"
            android:id="@+id/imvTrafficDetail"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/my_margin" />

        <ScrollView
            android:layout_width="@dimen/image"
            android:layout_height="@dimen/icon"
            android:id="@+id/scrollView"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/my_margin"
            android:background="#96ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txtDetail"
                android:textSize="@dimen/h2" />
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
